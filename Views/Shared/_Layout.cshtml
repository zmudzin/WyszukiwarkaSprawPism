<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - wyszukiwarka EZD</title>
    <link rel="stylesheet" href="~/Content/site.css" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar">
        <div class="container">
            <!-- Logo -->
            <a class="navbar-brand" href="https://ezd.podkowalesna.pl">
                <img src="~/Content/Images/banner-1.png" alt="Logo" />
            </a>

                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("WyszukiwarkaPism", "Home")">Wyszukiwarka Pism</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Sprawy", "Home")">Wyszukiwarka Spraw</a>
                    </li>
                </ul>
            </div>
        
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - wyszukiwarka EZD</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
